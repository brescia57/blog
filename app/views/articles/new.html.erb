<h1>New Article</h1>
<!--this is a helper form builder -->
<%= form_for :article, url: articles_path do |f| %>
<!--Title box-->
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<!--Text box -->
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>
<!--Submit button -->
<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', articles_path %>
